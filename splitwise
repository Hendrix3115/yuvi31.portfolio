<body>

<div class="container">
    <h2>ðŸ“Š NIT Bill Splitter</h2>
    <p style="text-align: center; font-size: 14px;">Perfect for hostel room expenses</p>

    <div class="input-group">
        <input type="text" id="friendName" placeholder="Enter friend's name">
        <button class="btn-add" onclick="addFriend()">Add</button>
    </div>
    <div id="friendsList" class="list"></div>

    <hr>

    <div class="input-group">
        <input type="number" id="totalAmount" placeholder="Total bill amount (â‚¹)">
        <button class="btn-calc" onclick="calculateSplit()">Split Bill</button>
    </div>

    <div id="resultBox" class="result-box">
        <h4 style="margin-top:0;">Results:</h4>
        <div id="splitResults"></div>
    </div>
</div>

<script>
    let friends = [];

    function addFriend() {
        const nameInput = document.getElementById('friendName');
        const name = nameInput.value.trim();
        if (name && !friends.includes(name)) {
            friends.push(name);
            updateList();
            nameInput.value = '';
        }
    }

    function updateList() {
        const list = document.getElementById('friendsList');
        list.innerHTML = friends.map(f => `<div class="item"><span>${f}</span><span style="color:red; cursor:pointer;" onclick="removeFriend('${f}')">âœ•</span></div>`).join('');
    }

    function removeFriend(name) {
        friends = friends.filter(f => f !== name);
        updateList();
    }

    function calculateSplit() {
        const amount = parseFloat(document.getElementById('totalAmount').value);
        const resultBox = document.getElementById('resultBox');
        const splitResults = document.getElementById('splitResults');

        if (friends.length === 0 || isNaN(amount)) {
            alert("Please add friends and an amount!");
            return;
        }

        const share = (amount / friends.length).toFixed(2);
        resultBox.style.display = 'block';
        splitResults.innerHTML = `
            <p><strong>Total Amount:</strong> â‚¹${amount}</p>
            <p><strong>Each person pays:</strong> â‚¹${share}</p>
            <ul style="padding-left: 20px;">
                ${friends.map(f => `<li>${f} owes â‚¹${share}</li>`).join('')}
            </ul>
        `;
    }
</script>

